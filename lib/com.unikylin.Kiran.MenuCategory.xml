<categories>
    <category>
        <name> 办公 </name>
        <logic>
            <desktop_category> office </desktop_category>
        </logic>
    </category>
    <category>
        <name> 开发 </name>
        <logic>
            <desktop_category> development </desktop_category>
        </logic>
    </category>
    <category>
        <name> 网络 </name>
        <logic>
            <or>
                <desktop_category> network </desktop_category>
                <desktop_id> com.ubuntu1904.firefox.desktop </desktop_id>
            </or>
        </logic>
    </category>
    <category>
        <name> 社交通讯 </name>
        <logic>
            <desktop_category> communication </desktop_category>
        </logic>
    </category>
    <category>
        <name> 图形 </name>
        <logic>
            <or>
                <desktop_category> graphics </desktop_category>
                <desktop_category> photography </desktop_category>
            </or>
        </logic>
    </category>
    <category>
        <name> 影音 </name>
        <logic>
            <or>
                <desktop_category> audiovideo </desktop_category>
                <desktop_category> audio </desktop_category>
                <desktop_category> player </desktop_category>
            </or>
        </logic>
    </category>
    <category>
        <name> 工具 </name>
        <logic>
            <desktop_category> utility </desktop_category>
        </logic>
    </category>
    <category>
        <name> 设置 </name>
        <logic>
            <desktop_category> settings </desktop_category>
        </logic>
    </category>
    <category>
        <name> 其他 </name>
        <repeat> false </repeat>
        <logic>
            <all></all>
        </logic>
    </category>
</categories>